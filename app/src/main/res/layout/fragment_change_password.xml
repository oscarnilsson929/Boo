<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/size_32"
    android:orientation="vertical"
    tools:context=".ui.fragment.ChangePasswordFragment">

    <EditText
        android:id="@+id/et_change_password_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_08"
        android:drawableLeft="@drawable/ic_password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/size_04"
        android:hint="@string/old_password"
        android:textColorHint="@color/colorGrayText"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_18"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/et_change_password_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_08"
        android:drawableLeft="@drawable/ic_password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/size_04"
        android:hint="New password"
        android:textColorHint="@color/colorGrayText"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_18"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/et_change_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_08"
        android:drawableLeft="@drawable/ic_password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/size_04"
        android:hint="Confirm password"
        android:textColorHint="@color/colorGrayText"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_18"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_16"
        fancy:fb_defaultColor="@color/colorLoginEmailNorm"
        fancy:fb_focusColor="@color/colorLoginTwitterPressed"
        fancy:fb_text="CHANGE PASSWORD"
        fancy:fb_textSize = "@dimen/font_size_16"
        fancy:fb_textColor="@android:color/white"
        fancy:fb_radius = "@dimen/size_48"/>

</LinearLayout>